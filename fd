#include "viewer.h"

#include <math.h>
#include <iostream>
#include "meshLoader.h"
#include <QTime>

using namespace std;

Viewer::Viewer(char *filename,const QGLFormat &format)
  : QGLWidget(format),
    _timer(new QTimer(this)),
    _currentshader(0),
    _light(glm::vec3(0,0,1)),
    _mode(false) {

  setlocale(LC_ALL,"C");

  // load a mesh into the CPU memory
  _mesh = new Mesh(filename);

  // create a camera (automatically modify model/view matrices according to user interactions)
  _cam  = new Camera(_mesh->radius,glm::vec3(_mesh->center[0],_mesh->center[1],_mesh->center[2]));

  _grid = new Grid();
  //_grid = new Grid(RESOL_GRID*2,-1.0f,1.0f);
  _timer->setInterval(10);
  connect(_timer,SIGNAL(timeout()),this,SLOT(updateGL()));
}

Viewer::~Viewer() {
  delete _timer;
  delete _mesh;
  delete _cam;

  for(unsigned int i=0;i<_shaders.size();++i) {
    delete _shaders[i];
  }
  deleteVAOterrain();
  deleteVAOquad();
  deleteFBO();
}




/**FBO**/
void Viewer::createFBO() {
  // Ids needed for the FBO and associated textures 
  glGenFramebuffers(1,&_fbo);
  glGenTextures(1,&_rendNoiseId);
  glGenTextures(1,&_rendNormalId);
}

void Viewer::initFBO() {
 // create the texture for rendering noise
  glBindTexture(GL_TEXTURE_2D,_rendNoiseId);
  glTexImage2D(GL_TEXTURE_2D, 0,GL_RGBA32F,RESOL_GRID,RESOL_GRID,0,GL_RGBA,GL_FLOAT,NULL);
  glTexParameteri(GL_TEXTURE_2D, GL_TEXTURE_MAG_FILTER, GL_NEAREST);
  glTexParameteri(GL_TEXTURE_2D, GL_TEXTURE_MIN_FILTER, GL_NEAREST); 
  glTexParameteri(GL_TEXTURE_2D, GL_TEXTURE_WRAP_S, GL_CLAMP_TO_EDGE);
  glTexParameteri(GL_TEXTURE_2D, GL_TEXTURE_WRAP_T, GL_CLAMP_TO_EDGE);

  // create the texture for rendering normals 
  glBindTexture(GL_TEXTURE_2D,_rendNormalId);
  glTexImage2D(GL_TEXTURE_2D, 0,GL_RGBA32F,RESOL_GRID,RESOL_GRID,0,GL_RGBA,GL_FLOAT,NULL);
  glTexParameteri(GL_TEXTURE_2D, GL_TEXTURE_MAG_FILTER, GL_NEAREST);
  glTexParameteri(GL_TEXTURE_2D, GL_TEXTURE_MIN_FILTER, GL_NEAREST); 
  glTexParameteri(GL_TEXTURE_2D, GL_TEXTURE_WRAP_S, GL_CLAMP_TO_EDGE);
  glTexParameteri(GL_TEXTURE_2D, GL_TEXTURE_WRAP_T, GL_CLAMP_TO_EDGE);

  // attach textures to framebuffer object 
  glBindFramebuffer(GL_FRAMEBUFFER,_fbo);
  glBindTexture(GL_TEXTURE_2D,_rendNoiseId);
  glFramebufferTexture2D(GL_FRAMEBUFFER,GL_COLOR_ATTACHMENT0,GL_TEXTURE_2D,_rendNoiseId,0);
  glBindTexture(GL_TEXTURE_2D,_rendNormalId);
  glFramebufferTexture2D(GL_FRAMEBUFFER,GL_COLOR_ATTACHMENT1,GL_TEXTURE_2D,_rendNormalId,0);
  glBindFramebuffer(GL_FRAMEBUFFER,0);
}

void Viewer::deleteFBO() {
  // delete all FBO Ids
  glDeleteFramebuffers(1,&_fbo);
  glDeleteTextures(0,&_rendNoiseId);
  glDeleteTextures(1,&_rendNormalId);
 }






/**VAO QUAD**/
//VAO du carre pour la texture de bruit
// create the VAO associated with the screen quad
void Viewer::createVAOquad() {
 	const GLfloat quadData[] = {
    -1.0f,-1.0f,0.0f, 1.0f,-1.0f,0.0f, -1.0f,1.0f,0.0f, -1.0f,1.0f,0.0f, 1.0f,-1.0f,0.0f, 1.0f,1.0f,0.0f };
 	// create a buffer inside the GPU memory
 	glGenVertexArrays(1,&_vaoQuad);
 	glGenBuffers(2,&_quad);

 	// activate VAO
 	glBindVertexArray(_vaoQuad);

 	// store triangle vertices inside the GPU memory
 	glBindBuffer(GL_ARRAY_BUFFER,_quad); // vertices
 	glBufferData(GL_ARRAY_BUFFER, sizeof(quadData),quadData,GL_STATIC_DRAW);
 	glVertexAttribPointer(0,3,GL_FLOAT,GL_FALSE,0,(void *)0);
 	glEnableVertexAttribArray(0);
}

void Viewer::deleteVAOquad() {
  glDeleteBuffers(1,&_quad);
  glDeleteVertexArrays(1,&_vaoQuad);
}

void Viewer::drawVAOquad() {
  // activate the VAO, draw the associated triangles and desactivate the VAO
  glBindVertexArray(_vaoQuad);
  glDrawArrays(GL_TRIANGLES,0,6);
  glBindVertexArray(0);
}





/**VAO TERRAIN**/
//supprimer VAO du carre pour la texture de bruit
void Viewer::createVAOterrain() {
	// create a buffer inside the GPU memory
	glGenVertexArrays(1,&_vaoTerrain);
	glGenBuffers(2,_terrain);

	// activate VAO
	glBindVertexArray(_vaoTerrain);

	// create the VBO associated with the grid (the terrain)
	glBindBuffer(GL_ARRAY_BUFFER,_terrain[0]); // vertices
	glBufferData(GL_ARRAY_BUFFER,_grid->nbVertices()*3*sizeof(float),_grid->vertices(),GL_STATIC_DRAW);
	glVertexAttribPointer(0,3,GL_FLOAT,GL_FALSE,0,(void *)0);
	glEnableVertexAttribArray(0);
	glBindBuffer(GL_ELEMENT_ARRAY_BUFFER,_terrain[1]); // indices
	glBufferData(GL_ELEMENT_ARRAY_BUFFER,_grid->nbFaces()*3*sizeof(int),_grid->faces(),GL_STATIC_DRAW);
}

void Viewer::deleteVAOterrain() {
  glDeleteBuffers(2,_terrain);
  glDeleteVertexArrays(1,&_vaoTerrain);
}

void Viewer::drawVAOterrain() {
  // activate the VAO, draw the associated triangles and desactivate the VAO
  glBindVertexArray(_vaoTerrain);
  glDrawElements(GL_TRIANGLES,3*_grid->nbFaces(),GL_UNSIGNED_INT,(void *)0); //not sure
  glBindVertexArray(0);
}





/**Shader QUAD for Perlin noise**/
void Viewer::createShadersQuad_noise() {
  _vertexFilenames.push_back("shaders/noise.vert");
  _fragmentFilenames.push_back("shaders/noise.frag");

  //_shaderSecondPass = new Shader();
  //_shaderSecondPass->load("shaders/second-pass-noise.vert","shaders/second-pass-noise.frag");
}

void Viewer::enableShaderQuad_noise() {
  // current shader ID 
  GLuint id = _shaders[0]->id(); 
  // activate the current shader 
  glUseProgram(id);
}





/**Shader QUAD to compute normal**/
void Viewer::createShadersQuad_normal() {
  _vertexFilenames.push_back("shaders/normal.vert");
  _fragmentFilenames.push_back("shaders/normal.frag");
}

void Viewer::enableShaderQuad_normal() {
  // current shader ID 
  GLuint id = _shaders[1]->id(); 
  // activate the current shader 
  glUseProgram(id);

  glActiveTexture(GL_TEXTURE0);
  glBindTexture(GL_TEXTURE_2D,_rendNoiseId);
  glUniform1i(glGetUniformLocation(id,"heightmap"),0);
}





/**Shader TERRAIN**/
void Viewer::createShadersTerrain(){
  _vertexFilenames.push_back("shaders/terrain.vert");
  _fragmentFilenames.push_back("shaders/terrain.frag");
}

void Viewer::enableShaderTerrain() {
  // get the current modelview and projection matrices 
  glm::mat4 p  = _cam->projMatrix();
  glm::mat4 mv  = _cam->mdvMatrix();

  // current shader ID 
  GLuint id = _shaders[2]->id(); 
  // activate the current shader 
  glUseProgram(id);

  glActiveTexture(GL_TEXTURE0);
  glBindTexture(GL_TEXTURE_2D,_rendNoiseId);
  glUniform1i(glGetUniformLocation(id,"heightmap"),0);
  glUniformMatrix4fv(glGetUniformLocation(id,"mdvMat"),1,GL_FALSE,&(mv[0][0]));
  glUniformMatrix4fv(glGetUniformLocation(id,"projMat"),1,GL_FALSE,&(p[0][0]));
}




void Viewer::disableShader() {
  // desactivate all shaders 
  glUseProgram(0);
}





void Viewer::paintGL() {
  //GLenum bufferlist [] = {GL_COLOR_ATTACHMENT0,GL_COLOR_ATTACHMENT1};
  //glDrawBuffers(2,bufferlist);

  // activate the created framebuffer object
  glBindFramebuffer(GL_FRAMEBUFFER,_fbo);

  glDrawBuffer(GL_COLOR_ATTACHMENT0);

  glViewport(0,0,RESOL_GRID,RESOL_GRID);
  glClear(GL_COLOR_BUFFER_BIT | GL_DEPTH_BUFFER_BIT);// clear the color and depth buffers 
  enableShaderQuad_noise();
  drawVAOquad(); 
  disableShader();

  glDrawBuffer(GL_COLOR_ATTACHMENT1);

  glViewport(0,0,RESOL_GRID,RESOL_GRID);
  glClear(GL_COLOR_BUFFER_BIT | GL_DEPTH_BUFFER_BIT);// clear the color and depth buffers 
  enableShaderQuad_normal();
  drawVAOquad();
  disableShader();

  glBindFramebuffer(GL_FRAMEBUFFER,0);// desactivate fbo

  glViewport(0,0,width(),height());
  glClear(GL_COLOR_BUFFER_BIT | GL_DEPTH_BUFFER_BIT);// clear the color and depth buffers 
  enableShaderTerrain();
  drawVAOterrain();
  disableShader();

  // glClear(GL_COLOR_BUFFER_BIT | GL_DEPTH_BUFFER_BIT);
}






void Viewer::resizeGL(int width,int height) {
  _cam->initialize(width,height,false);
  glViewport(0,0,width,height);
  initFBO();
  updateGL();

}

void Viewer::mousePressEvent(QMouseEvent *me) {
  const glm::vec2 p((float)me->x(),(float)(height()-me->y()));

  if(me->button()==Qt::LeftButton) {
    _cam->initRotation(p);
    _mode = false;
  } else if(me->button()==Qt::MidButton) {
    _cam->initMoveZ(p);
    _mode = false;
  } else if(me->button()==Qt::RightButton) {
    _light[0] = (p[0]-(float)(width()/2))/((float)(width()/2));
    _light[1] = (p[1]-(float)(height()/2))/((float)(height()/2));
    _light[2] = 1.0f-std::max(fabs(_light[0]),fabs(_light[1]));
    _light = glm::normalize(_light);
    _mode = true;
  } 

  updateGL();
}

void Viewer::mouseMoveEvent(QMouseEvent *me) {
  const glm::vec2 p((float)me->x(),(float)(height()-me->y()));
 
  if(_mode) {
    // light mode
    _light[0] = (p[0]-(float)(width()/2))/((float)(width()/2));
    _light[1] = (p[1]-(float)(height()/2))/((float)(height()/2));
    _light[2] = 1.0f-std::max(fabs(_light[0]),fabs(_light[1]));
    _light = glm::normalize(_light);
  } else {
    // camera mode
    _cam->move(p);
  }

  updateGL();
}

void Viewer::keyPressEvent(QKeyEvent *ke) {
  
  // key a: play/stop animation
  if(ke->key()==Qt::Key_A) {
    if(_timer->isActive()) 
      _timer->stop();
    else 
      _timer->start();
  }

  // key i: init camera
  if(ke->key()==Qt::Key_I) {
    _cam->initialize(width(),height(),true);
  }
  
  // key f: compute FPS
  if(ke->key()==Qt::Key_F) {
    int elapsed;
    QTime timer;
    timer.start();
    unsigned int nb = 500;
    for(unsigned int i=0;i<nb;++i) {
      paintGL();
    }
    elapsed = timer.elapsed();
    double t = (double)nb/((double)elapsed);
    cout << "FPS : " << t*1000.0 << endl;
  }

  // key r: reload shaders 
  if(ke->key()==Qt::Key_R) {
    for(unsigned int i=0;i<_vertexFilenames.size();++i) {
      _shaders[i]->reload(_vertexFilenames[i].c_str(),_fragmentFilenames[i].c_str());
    }
  }

  // space: next shader
  if(ke->key()==Qt::Key_Space) {
    _currentshader = (_currentshader+1)%_shaders.size();
  }

  updateGL();
}

void Viewer::initializeGL() {
  // make this window the current one
  makeCurrent();

  // init and chack glew
  glewExperimental = GL_TRUE;

  if(glewInit()!=GLEW_OK) {
    cerr << "Warning: glewInit failed!" << endl;
  }

  // init OpenGL settings
  glClearColor(0.0,0.0,0.0,1.0);
  glEnable(GL_DEPTH_TEST);
  glPolygonMode(GL_FRONT_AND_BACK,GL_FILL);
  glViewport(0,0,width(),height());

  // initialize camera
  _cam->initialize(width(),height(),true);

  // load shader files
  createShadersQuad_noise();
  createShadersQuad_normal();
  createShadersTerrain();

  // init and load all shader files
  for(unsigned int i=0;i<_vertexFilenames.size();++i) {
    _shaders.push_back(new Shader());
    _shaders[i]->load(_vertexFilenames[i].c_str(),_fragmentFilenames[i].c_str());
  }

  // VAO creation 
  createVAOquad();
  createVAOterrain();

  // create/init FBO
  createFBO();
  initFBO();

  // starts the timer 
  _timer->start();
}
